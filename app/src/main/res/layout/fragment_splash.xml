<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apps.www.grabilityapp.fragments.SplashFragment">

    <com.github.jorgecastillo.FillableLoader
        android:id="@+id/fillableLoader"
        android:layout_width="300dp"
        android:layout_height="150dp"
        app:fl_fillColor="#e6331f"
        app:fl_strokeColor="#000"
        app:fl_strokeWidth="1dp"
        app:fl_originalWidth="736"
        app:fl_originalHeight="316"
        app:fl_clippingTransform="waves"
        android:layout_gravity="center"
        />

</FrameLayout>
